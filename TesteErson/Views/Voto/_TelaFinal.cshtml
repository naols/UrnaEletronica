@model TesteErson.Models.CandidatoViewModels.CandidatoViewModel;
@{
    Layout = "_Layout";

    var votoBranco = ((int)ViewBag.Legenda == 000);
    string txtLegenda = ViewBag.Legenda.ToString();
    if (txtLegenda.Length == 1) { txtLegenda = "0" + txtLegenda; }
    var css = "";
    if (!votoBranco) { css = "etapa1"; }
}
<div class="conteudo titulo">
    <img src="~/logo2.png" width="100" />
    <h3>Seu voto foi computado com sucesso</h3>
</div>
@{ 
    if (!votoBranco)
    {
        <div class="conteudo candidato">
         <div class="candidato nome">Candidato: <strong>@Model.NomeCompleto</strong></div>
         <div class="candidato vice">Vice: <strong>@Model.Vice</strong></div>
        </div>
}
}


<div class="conteudo legenda etapa1">
    @{
        if (votoBranco) // Maneira para entender se é branco ou não
        {

            <div class="numero">B</div>
            <div class="numero">R</div>
            <div class="numero">A</div>
            <div class="numero">N</div>
            <div class="numero">C</div>
            <div class="numero">O</div>
        }
        else
        {
            <div class="numero">@txtLegenda.Substring(0, 1)</div>
            <div class="numero">@txtLegenda.Substring(1)</div>
        }
    }
</div>

<div class="conteudo rodape @css">
    <p>Obrigado pela sua participação</p>
    <p>Para votar novamente, <a href="@Url.Action("Index","Voto")">clique aqui.</a></p>
</div>